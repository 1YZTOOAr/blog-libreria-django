{
  "version": 2,
  "builds": [
    { "src": "contenedor/api/index.py", "use": "@vercel/python" }
  ],
  "installCommand": "pip install -r contenedor/requirements.txt",
  "buildCommand": "python manage.py collectstatic --noinput",
  "routes": [
    { "src": "/static/(.*)", "dest": "staticfiles/$1" },
    { "src": "/(.*)", "dest": "contenedor/api/index.py" }
  ]
}