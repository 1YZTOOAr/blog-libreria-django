{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": [
          "blog/**",
          "posts/**",
          "templates/**",
          "staticfiles/**"
        ]
      }
    },
    { "src": "api/healthz.py", "use": "@vercel/python" },
    {
      "src": "api/static_healthz.py",
      "use": "@vercel/python",
      "config": { "includeFiles": ["staticfiles/**"] }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "staticfiles/$1" },
    { "src": "/healthz/?", "dest": "api/healthz.py" },
    { "src": "/static-healthz/?", "dest": "api/static_healthz.py" },
    { "src": "/(.*)", "dest": "api/index.py" }
  ]
}
